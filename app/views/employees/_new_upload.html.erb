<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="uploadLabel">Upload</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <p>Please upload the file containing all the employees data</p>
      <section>
        <div id="dropzone">
          <%= form_with(id: 'upload-form', url: { action: :upload }, multipart: true, class: 'dropzone needsclick dz-clickable') do %>
            <div class="dz-message needsclick">
              <button type="button" class="dz-button">Drop file here or click to upload.</button>
              <br>
              <span class="note needsclick">Only these file types are accepted: .csv, .xls, .xlsx</span>
              <span class="note needsclick">Only 1 file is permitted</span>
            </div>
          <% end %>
        </div>
      </section>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button id="start-processing" type="button" class="btn btn-primary" disabled>Start Processing</button>
    </div>
  </div>
</div>