<div class="container table-responsive">
  <div class="row">
    <div class="col">
      <h1>Partner Companies</h1>
    </div>
    <div class="col text-right">
      <%= link_to 'New Partner Company', new_partner_company_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <table class="table table-hover table-sm">
    <thead class="thead-dark">
    <tr>
      <th>Identity</th>
      <th>Name</th>
      <th>Contractors</th>
      <th>Clients</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @partner_companies.each do |partner_company| %>
      <tr>
        <td><%= partner_company.identity %></td>
        <td><%= partner_company.name %></td>
        <td><%= link_to partner_company.contractor_ids.count, contractors_path(partner_company_id: partner_company) %></td>
        <td><%= link_to partner_company.client_ids.count, clients_path(partner_company_id: partner_company) %></td>
        <td><%= link_to 'Show', partner_company %></td>
        <td><%= link_to 'Edit', edit_partner_company_path(partner_company) %></td>
        <td><%= link_to 'Destroy', partner_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
