<div class="container table-responsive">
  <div class="row">
    <div class="col">
      <h1>Companies</h1>
    </div>
    <div class="col text-right">
      <%= link_to 'New Company', new_company_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <table class="table table-hover table-sm">
    <thead class="thead-dark">
    <tr>
      <th>Identity</th>
      <th>Name</th>
      <th>Employees</th>
      <th>Contractors</th>
      <th>Clients</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.identity %></td>
        <td><%= company.name %></td>
        <td><%= link_to company.employee_ids.count, employees_path(company_id: company) %></td>
        <td><%= link_to company.contractor_ids.count, contractors_path(company_id: company) %></td>
        <td><%= link_to company.client_ids.count, clients_path(company_id: company) %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
