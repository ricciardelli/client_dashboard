<div class="container table-responsive">
  <div class="row">
    <div class="col">
      <h1>Clients</h1>
    </div>
    <div class="col text-right">
      <%= link_to 'New Client', new_client_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <table class="table table-hover table-sm">
    <thead class="thead-dark">
    <tr>
      <th>Ctoken</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Consultants (Company)</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.ctoken %></td>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td>
          <ul>
            <% client.consultants.each do |consultant| %>
              <li><%= consultant.full_name %> (<%= consultant.company_name %>)</li>
            <% end %></ul>
        </td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
    </tbody>
  </table>
</div>
